<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clParentHolder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/_10sdp">

    <TextView
        android:id="@+id/tvType"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:background="@drawable/captain_background"
        android:gravity="center"
        android:padding="@dimen/_1sdp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/_8ssp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/ivPlayer"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/vice_captain" />

    <ImageView
        android:id="@+id/ivPlayer"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPlayerName"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/curve_white"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="15"
        android:padding="@dimen/_2sdp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/_9ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPlayer"
        tools:text="Vishal Yadav" />

</androidx.constraintlayout.widget.ConstraintLayout>
